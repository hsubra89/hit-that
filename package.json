{
  "name": "hit-that",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Harish Subramanium <hsubra89@gmail.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/chrome": "^0.0.132",
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "scripts": {
    "copy:manifest": "cp manifest.json ./dist/",
    "copy:static": "cp -R ./static/* ./dist/",
    "copy": "mkdir -p ./dist && yarn copy:manifest && yarn copy:static",
    "bootstrap": "yarn install --pure-lockfile",
    "compile": "tsc",
    "test": "jest",
    "dev": "yarn copy && yarn compile && parcel watch --no-hmr --no-autoinstall --no-source-maps src/main.ts src/options.ts",
    "build": "yarn copy && yarn compile && parcel build src/main.ts src/options.ts"
  }
}
